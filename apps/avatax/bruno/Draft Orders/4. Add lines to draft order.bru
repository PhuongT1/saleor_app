meta {
  name: 4. Add lines to draft order
  type: graphql
  seq: 5
}

post {
  url: {{API_URL}}
  body: graphql
  auth: bearer
}

auth:bearer {
  token: {{staffToken}}
}

body:graphql {
  mutation OrderLinesAdd($id: ID!, $input: [OrderLineCreateInput!]!) {
    orderLinesCreate(id: $id, input: $input) {
      errors {
        ...OrderError
      }
       order {
        id
        billingAddress {
          country {
            code
          }
          city
          postalCode
          countryArea
        }
        shippingAddress {
          country {
            code
          }
          city
          postalCode
          countryArea
        }
        total {
          ...BaseTaxedMoney
        }
        subtotal {
          ...BaseTaxedMoney
        }
        shippingPrice {
          ...BaseTaxedMoney
        }
        lines {
          id
          productVariantId
          quantity
          totalPrice {
            ...BaseTaxedMoney
          }
        }
        deliveryMethod {
          __typename
          ... on ShippingMethod {
            id
            name
            price {
              amount
            }
          }
        }
        shippingMethods {
          id
          name
          price {
            amount
          }
        }
      }
    }
  }
  
  fragment BaseTaxedMoney on TaxedMoney {
    gross {
      amount
    }
    net {
      amount
    }
    tax {
      amount
    }
    currency
  }
  
  fragment OrderError on OrderError {
    code
    field
    message
    addressType
    orderLines
    warehouse
    variants
    __typename
  }
}

body:graphql:vars {
  {
    "id": "{{orderId}}",
    "input": [
      {
        "quantity": 1,
        "variantId": "{{productVariantId}}"
      },
      {
        "quantity": 1,
        "variantId": "{{productVariantId1}}"
      },
      
      {
        "quantity": 1,
        "variantId": "{{productVariantId2}}"
      }
    ]
  }
}

vars:post-response {
  orderLineiId: res.body.data.orderLinesCreate.order.lines[0].id
  orderLineiId1: res.body.data.orderLinesCreate.order.lines[1].id
  orderLineiId2: res.body.data.orderLinesCreate.order.lines[2].id
}
