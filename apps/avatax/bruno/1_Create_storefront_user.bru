meta {
  name: 1. Create storefront user
  type: graphql
  seq: 1
}

post {
  url: {{API_URL}}
  body: graphql
  auth: none
}

body:graphql {
  mutation CreateStoreFrontUser(
    $channelSlug: String
    $email: String!
    $password: String!
    $firstName: String
  ) {
    accountRegister(
      input: {
        firstName: $firstName
        email: $email
        password: $password
        channel: $channelSlug
        metadata: [{ key: "avataxCustomerCode", value: "OKON" }]
      }
    ) {
      user {
        id
        metadata {
          key
          value
        }
      }
      errors {
        code
        field
        message
      }
    }
  }
  
}

body:graphql:vars {
  {
      "channelSlug": "{{channel_USD}}",
      "email": "{{storefrontUserEmail}}",
      "password": "{{storefrontUserPassword}}",
      "firstName": "{{storefrontUserFirstName}}"
  }
}

script:pre-request {
  const { faker } = require('@faker-js/faker');
  
  const configuredEmail = bru.getProcessEnv("USER_EMAIL");
  
  if (!configuredEmail) {
    bru.setVar("storefrontUserEmail", faker.internet.email());
  }
  
  const configuredPassword = bru.getProcessEnv("USER_PASSWORD");
  
  if (!configuredPassword) {
    bru.setVar("storefrontUserPassword", faker.internet.password());
  }
  
  bru.setVar("storefrontUserFirstName", faker.name.firstName());
}
